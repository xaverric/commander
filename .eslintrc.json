{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "rules": {
        "semi": ["error", "always"]
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js"
            ],
            "env": {
                "jest": true
            }
        }
    ],
    "ignorePatterns": ["**/*.json", "**/*.md", "**/*.properties"]
}
